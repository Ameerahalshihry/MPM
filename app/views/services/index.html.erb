   <div class="container">
<h1>Services</h1>
<br />


        <div class="card-columns">
<% @services.each do |service| %>

<div class="card" style="width: 18rem; height: 18rem;">
  <img class="card-img-top" src="<%= service.image %>" alt="Card image cap" style="width: 286px; height: 150px;">
  <div class="card-body">
    <h5 class="card-title"> 
    <%= link_to service.name , service_path(service) %> </h5>
    <p class="card-text"> 
   <strong>Price: </strong><%= service.price %> $<br />
   <strong>Duration: </strong><%= service.duration %> min</p>

  </div>
</div>
<% end %>
</div>
</div>